<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrabajoAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="stChipEntry" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:fontFamily">@font/gordita</item>
        <item name="android:textColor">@drawable/sel_colortexto</item>
        <item name="chipBackgroundColor">@color/fondo_oscuro</item>
        <item name="chipStrokeColor">@color/fondo_claro</item>
        <item name="chipStrokeWidth">3dp</item>
    </style>
</resources>